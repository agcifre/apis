<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:att="http://bced.wallonie.be/data/entity/dmfa/attestation/v1" xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:work="http://bced.wallonie.be/data/entity/dmfa/worker/v1" targetNamespace="http://bced.wallonie.be/data/entity/dmfa/attestation/v1" elementFormDefault="qualified" attributeFormDefault="unqualified">
